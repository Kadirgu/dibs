<div class="container">

<div class="container"  id="product">
  <h1 class="index-title">Dibs</h1>
  <%= form_with url: products_path, method: :get, class: "d-flex search-field" do %>
    <%= text_field_tag :query,
      params[:query],
      class: "form-control",
      placeholder: "Search"
    %>
    <%= submit_tag "Search", class: "btn btn-primary" %>
    <% end %>
  <br><br><br>

  <h1>All Products</h1>
  <div class="container">
    <div style="width: 100%; height: 600px;"
      data-controller="map"
      data-map-markers-value="<%= @markers.to_json %>"
      data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
</div>
  <%= link_to 'Create new Product ï¼‹', new_product_path, class: 'btn btn-primary btn-sm' %>
  <br><br>
  <% if current_user %>
    <div class="user-info">
      <div>
      <% if @user.photo.key %>
        <%= cl_image_tag @user.photo.key, class: 'user-img'%>
      <% else %>
        <img class="user-img" src="https://www.kurin.com/wp-content/uploads/placeholder-square.jpg" alt="">
      <% end %>
      </div>
      <div>
        <h2>Good morningðŸ‘‹<br><%= @user.first_name %> <%= @user.last_name %></h2>
      </div>
    </div>
  <% end %>

  <div class="search">
    <h2>Search</h2>
    <p>Search here</p>
  </div>

  <div class="spotted">
    <h2>Spotted</h2>
    <p>Geomap here</p>
  </div>

  <div class="categories">
    <h2>Categories</h2>
    <p>Categories here</p>
  </div>

  <div class="products row">
    <h2>Most recent</h2>
    <% @products.each do |product| %>
      <div class="col-6">
        <%= link_to product_path(product) do %>
          <div class="product-card">
          <% if product.photo.key %>
            <%= cl_image_tag product.photo.key, class: 'product-img'%>
          <% else %>
            <img class="product-img" src="https://www.kurin.com/wp-content/uploads/placeholder-square.jpg" alt="">
          <% end %>
            <div class="product-information">
              <h2 class="product-title"><%= product.title %></h2>
              <p class="product-price">$<%= product.price %></p>
            </div>
            <div class="favorite-button">
              <a href="#"><i class="fa fa-heart"></i></a>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>

</div>

<%= render "layouts/footer" %>
