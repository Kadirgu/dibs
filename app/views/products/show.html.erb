<div class="container">
  <div class="site-navigation">
    <%= link_to :back do %>
      <i class="fa fa-arrow-left"></i>
    <% end %>
    <h2 class="site-navigation-title">Go back</h2>
  </div>

  <% if @user.photo.key %>
    <%= cl_image_tag @product.photo.key, class: 'product-show-img' %>
  <% else %>
    <img class="product-show-img" src="https://www.kurin.com/wp-content/uploads/placeholder-square.jpg" alt="">
  <% end %>
  <br><br>
  <h2 class="product-show-title"><%= @product.title %></h2>
  <hr>
  <p><strong>Description:</strong><br><%= @product.description %></p>
  <p><strong>Condition:</strong><br><%= @product.condition %></p>
  <p><strong>Material:</strong><br><%= @product.material %></p>
  <p><strong>Dimension:</strong><br><%= @product.dimension %></p>
  <p><strong>Location:</strong><br><%= @product.location %></p>
  <hr>
  <%= link_to 'Message', products_path, class: 'button' %><br><br>
  <%= link_to 'Edit Product', edit_product_path(@product), class: 'button' %>
  <%= link_to 'Delete Product', product_path(@product), class: 'button', data: {turbo_method: :delete, turbo_confirm: "Are you sure you?"} %>
</div>
