<div class="container">
  <%= cl_image_tag @product.photo.key, class: 'product-show-img' %>
  <br><br>
  <h1><%= @product.title %></h1>
  <br>
  <p><strong>Description:</strong><br><%= @product.description %></p>
  <p><strong>Condition:</strong><br><%= @product.condition %></p>
  <p><strong>Material:</strong><br><%= @product.material %></p>
  <p><strong>Dimension:</strong><br><%= @product.dimension %></p>
  <p><strong>Location:</strong><br><%= @product.location %></p>
  <p><strong>Spotted:</strong><br><%= @product.spotted %></p>
  <br>
  <%= link_to 'Contact seller', products_path, class: 'btn btn-primary btn-sm' %><br><br>
  <%= link_to 'Edit Product', edit_product_path(@product), class: 'btn btn-primary btn-sm' %>
  <%= link_to 'Delete Product', product_path(@product), class: 'btn btn-danger btn-sm', data: {turbo_method: :delete, turbo_confirm: "Are you sure you?"} %>
</div>
