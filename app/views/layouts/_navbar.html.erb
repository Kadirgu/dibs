<div class="navbar navbar-expand-sm navbar-dark navbar-lewagon">
  <div class="container-fluid nav-container">
    <%= link_to product_path, class: "navbar-brand" do %>
      <%= image_tag "#", id: 'logo'%>
    <% end %>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
        <% if user_signed_in? %>
          <%= cl_image_tag(current_user.photo.key, class: 'avatar-image') %>
          <li class="nav-item dropdown">
            <img class="avatar dropdown-toggle" id="navbarDropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false" src="">
            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
            <%= link_to "My Products", my_products_path, class: 'navbar-link'%>
            <%= link_to "My Favorits", favorits_path, class: 'navbar-link'%>
            <%= link_to "Log out", destroy_user_session_path, class: 'navbar-link', data: {turbo_method: :delete} %>
            </div>
          </li>
        <% else %>
          <%= link_to "Login", new_user_session_path, class: "btn btn-primary btn-sm" %>
        <% end %>
      </ul>
    </div>
  </div>
</div>
